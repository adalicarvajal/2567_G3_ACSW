<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal"
    android:padding="16dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textColor="@color/black"
    android:background="#96000000">

    <TextView
        android:id="@+id/textViewCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Requiere curso de capacitación?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/radioGroupCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCurso"
        android:layout_marginTop="8dp"
        >

        <RadioButton
            android:id="@+id/radioButtonSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextTemaCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupCurso"
        android:hint="Tema de curso"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/textViewDiplomado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTemaCurso"
        android:text="¿Requiere diplomado?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/radioGroupDiplomado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDiplomado"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextTemaDiplomado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupDiplomado"
        android:hint="Tema Diplomado:"
        android:shadowColor="@color/white"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textViewEspecialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTemaDiplomado"
        android:text="¿Requiere especialidad?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/radioGroupEspecialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEspecialidad"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextTemaEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupEspecialidad"
        android:hint="Tema Diplomado:"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textViewMaestria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTemaEspecialidad"
        android:text="¿Requiere Maestría?"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupMaestria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMaestria"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextTemaMaestria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupMaestria"
        android:hint="Tema Maestría:"
        android:textColor="@color/white"
        android:inputType="text"
        android:enabled="false" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTemaMaestria"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:backgroundTint="#43a047"/>

        <Button
            android:id="@+id/botonRegresar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:backgroundTint="#43a047"/>

    </LinearLayout>

</RelativeLayout>
    </ScrollView>