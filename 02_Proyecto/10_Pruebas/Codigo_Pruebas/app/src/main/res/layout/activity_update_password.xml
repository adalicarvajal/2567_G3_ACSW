<?xml version="1.0" encoding="utf-8"?>
<!-- activity_update_password.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_principal"> <!-- Color de fondo verde (#4CAF50) -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Contraseña"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittext_border_blue"
        android:hint="Contraseña actual"
        android:inputType="textPassword"
        android:textColorHint="#9b9b9b"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edittext_border_blue"
        android:hint="Nueva contraseña"
        android:inputType="textPassword"
        android:textColorHint="#9b9b9b"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/edittext_border_blue"
        android:hint="Confirmar nueva contraseña"
        android:inputType="textPassword"
        android:textColorHint="#9b9b9b"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Contraseña"
        android:textColor="@color/white"
        android:backgroundTint="#43a047"/>
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textColor="@color/white"
        android:backgroundTint="#43a047"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="298dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/iasa_ninas" />

</LinearLayout>
