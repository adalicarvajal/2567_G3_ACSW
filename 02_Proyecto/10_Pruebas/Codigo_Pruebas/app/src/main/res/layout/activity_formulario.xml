<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal"

    android:padding="16dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#96000000">

    <TextView
        android:id="@+id/textViewMaestria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título de cuarto grado 1"
        android:textSize="18sp"
        android:textStyle="bold"

        android:textColor="@color/white"
        />

    <RadioGroup
        android:id="@+id/radioGroupMaestria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMaestria"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"

            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextDenominacion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupMaestria"
        android:hint="Denominacion del título"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextMaestria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDenominacion1"
        android:hint="Nombre del título"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textViewDoctorado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextMaestria"
        android:text="Segundo título de cuarto nivel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/radioGroupDoctorado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDoctorado"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"

            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"

            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextDenominacion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupDoctorado"
        android:hint="Denominación del título"
        android:inputType="text"
        android:enabled="false"

        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextDoctorado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDenominacion2"
        android:hint="Nombre del Título"
        android:inputType="text"
        android:enabled="false"

        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/textViewTitulo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tercer título de cuarto nivel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/editTextDoctorado"

        android:textColor="@color/white"
        />

    <RadioGroup
        android:id="@+id/radioGroupTercero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulo3"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"

            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextDenominacion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupTercero"
        android:hint="Denominacion del título"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/editTextTitulotercero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDenominacion3"
        android:hint="Nombre del Título"
        android:inputType="text"
        android:enabled="false"

        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textViewTitulo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tercer título de cuarto nivel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/editTextTitulotercero"

        android:textColor="@color/white"
        />

    <RadioGroup
        android:id="@+id/radioGroupCuarto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulo4"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioButtonSi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radioButtonNo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"

            android:textColor="@color/white"/>
    </RadioGroup>
    <EditText
        android:id="@+id/editTextDenominacion4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioGroupCuarto"
        android:hint="Denominacion del título"
        android:inputType="text"
        android:enabled="false"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/editTextTitulocuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDenominacion4"
        android:hint="Nombre del Título"
        android:inputType="text"
        android:enabled="false"

        android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTitulocuarto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:backgroundTint="#43a047"/>

        <Button
            android:id="@+id/botonRegresar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:backgroundTint="#43a047"/>

    </LinearLayout>

</RelativeLayout>
    </ScrollView>